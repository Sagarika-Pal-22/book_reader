<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Order_Successful_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/success_logo" />

        <TextView
            android:id="@+id/payment_successful"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@id/image"
            android:fontFamily="@font/fonts_medium"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:lineSpacingExtra="4sp"
            android:text="Payment Successful"
            android:textColor="#CF1414"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_successful"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/medium"
            android:lineSpacingExtra="4sp"
            android:text="        Thank you for the payment\n We receive it and you will receive\n your receipt at your respective mail"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>