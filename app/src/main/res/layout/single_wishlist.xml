<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_5sdp"
    android:id="@+id/linear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_wish"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/no_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:text="Kolkata Shekaler Ekaler"
                    android:fontFamily="@font/fonts_medium"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3e3e3e" />
                <com.like.LikeButton
                    android:id="@+id/fab_btn"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_60sdp"
                    app:circle_end_color="@android:color/holo_red_dark"
                    app:circle_start_color="@android:color/holo_red_light"
                    app:dots_primary_color="#E43434"
                    app:dots_secondary_color="@android:color/holo_red_dark"
                    app:icon_size="22dp"
                    app:like_drawable="@drawable/favorite"
                    app:unlike_drawable="@drawable/favorite_border"
                    app:liked="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center|start"
                android:text="Priyanka Jangid"
                android:fontFamily="@font/fonts_medium"
                android:textSize="10sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:gravity="center|start"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/blk_rpe"/>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonts_medium"
                    android:text="189"
                    android:textColor="#3e3e3e"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="#DDDBDB"/>
    </LinearLayout>

</LinearLayout>