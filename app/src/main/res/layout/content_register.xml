<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/relative">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_20sdp">
            <TextView
                android:id="@+id/book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center|start"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:text="Create an account and start your\nsubscription to get unlimited access to this book and thousands more. Get started with a free trial!"
                android:fontFamily="@font/fonts_medium"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardBackgroundColor="#fff"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/profile"
                        app:tint="#E3E0E0" />

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_10sdp"
                        android:backgroundTint="#fff"
                        android:fontFamily="@font/fonts_medium"
                        android:hint="Enter Name"
                        android:textSize="15sp"
                        android:inputType="text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardBackgroundColor="#fff"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/phone"
                        app:tint="#E3E0E0" />

                    <EditText
                        android:id="@+id/edt_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_10sdp"
                        android:backgroundTint="#fff"
                        android:fontFamily="@font/fonts_medium"
                        android:hint="Mobile Number"
                        android:textSize="15sp"
                        android:inputType="number" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardBackgroundColor="#fff"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/email"
                        app:tint="#E3E0E0" />

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_10sdp"
                        android:backgroundTint="#fff"
                        android:fontFamily="@font/fonts_medium"
                        android:hint="Email id"
                        android:textSize="15sp"
                        android:inputType="textEmailAddress" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardBackgroundColor="#fff"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/password"
                        app:tint="#E3E0E0" />

                    <EditText
                        android:id="@+id/edt_pswrd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/_10sdp"
                        android:backgroundTint="#fff"
                        android:hint="Password"
                        android:fontFamily="@font/fonts_medium"
                        android:textSize="15sp"
                        android:inputType="textPassword" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textforgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:gravity="end"
                    android:fontFamily="@font/fonts_medium"
                    android:lineSpacingExtra="3sp"
                    android:text="Forget Password?"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Continue"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/fonts_medium"
                android:background="@drawable/background_login"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_20sdp"
                android:orientation="horizontal">
                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonts_medium"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="OR"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="Sign up with Facebook"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/fonts_medium"
                android:background="@drawable/fb_login"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="#E6E5E5"
        android:gravity="center"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:text="Already have an account ?"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/login"
            android:layout_toRightOf="@id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:text="Log in"
            android:textColor="#F4732E"
            android:textSize="15sp"
            android:textStyle="normal" />
    </RelativeLayout>
</RelativeLayout>