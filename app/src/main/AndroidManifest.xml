<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookreader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Search_Product_Activity"
            android:label="@string/title_activity_search__product_"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".Order_Successful_Activity" />
        <activity
            android:name=".CheckOut_Activity"
            android:label="@string/title_activity_check_out_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Address_Activity"
            android:label="@string/title_activity_address_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Register_Activity" />
        <activity android:name=".Splash_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Search_Activity"
            android:label="@string/title_activity_search_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Audio_Listen_Activity"
            android:label="@string/title_activity_audio__listen_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Notification_Activity"
            android:label="@string/title_activity_notification_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Login_Activity" />
        <activity
            android:name=".WishList_Activity"
            android:label="@string/title_activity_wish_list_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Order_Activity"
            android:label="@string/title_activity_order_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CartActivity"
            android:label="@string/title_activity_cart"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EBook_Details_Activity"
            android:label="@string/title_activity_e_book__details_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PDF_Reader_Activity"
            android:label="@string/title_activity_p_d_f__reader_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AllBooks_Activity"
            android:label="@string/title_activity_all_books_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".All_Ebooks_Activity"
            android:label="@string/title_activity_all__ebooks_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BookDetails_Activity"
            android:label="@string/title_activity_book_details_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Home_Activity"
            android:label="@string/title_activity_home_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>